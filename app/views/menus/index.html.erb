<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Current Menu Options</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Current</th>
        <th>Image link</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.name %></td>
          <td><%= check_box "menu", "option", {:checked => menu.option, :disabled => true}%></td>
          <td><%= menu.image_link %></td>
          <td><%= link_to 'Show', menu %></td>
          <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
          <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Menu', new_menu_path, class: "btn btn-primary" %>

</div>
